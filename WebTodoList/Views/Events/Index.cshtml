@model IEnumerable<WebTodoList.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nameEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.placeEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.startDateEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.endDateEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descriptionEvent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.placeEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startDateEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endDateEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descriptionEvent)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
